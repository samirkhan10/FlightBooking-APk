<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ImportantContact">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/tool"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/flad"
            android:layout_width="25dp"
            android:onClick="Back"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/ballo"
            android:text="Important Contact"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/tool"
        android:background="#E8E8E8"
        android:orientation="vertical"
        android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_90sdp"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:orientation="horizontal"
    android:weightSum="3">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_margin="6dp"
    android:background="@drawable/police"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="6dp"

        android:background="@drawable/hospital"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="6dp"

        android:background="@drawable/hotel_iconn"/>

</LinearLayout>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_height="200dp"

android:orientation="vertical"
            android:background="@drawable/rect_back">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
           android:layout_centerInParent="true"
                android:fontFamily="@font/ballo"
                android:gravity="center"
                android:text="Agent Contact"/>


<LinearLayout
    android:layout_width="match_parent"
   android:layout_alignParentBottom="true"
    android:layout_marginBottom="25dp"

    android:layout_height="30dp">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:background="@drawable/whtsapp"
       />

    <ImageView
        android:layout_width="90dp"
        android:layout_marginTop="-17dp"
        android:layout_height="64dp"
android:layout_marginRight="10dp"
        android:background="@drawable/call"
        />



</LinearLayout>


            </RelativeLayout>


        </LinearLayout>






    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/belowauth"/>
</RelativeLayout>