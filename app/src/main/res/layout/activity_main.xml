<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            tools:context=".MainActivity">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/citytwo">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"


                    >

                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/menu" />

                    <ImageView
                        android:id="@+id/flad"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/bell" />


                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dayPlan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="-25dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/backred"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/hint_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/ballo"
                    android:text="Click for Agenda"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />

                <ImageView
                    android:id="@+id/flag"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/hint_phone"
                    android:src="@drawable/arrow"
                    app:tint="@color/white" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:src="@drawable/drop" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/travelDoc_Layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/hint_phone"

                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_25sdp"

                android:background="@drawable/backlogin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/travel_icon"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:src="@drawable/travel_icon" />


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/travel_icon"
                    android:background="@null"
                    android:fontFamily="@font/ballo"

                    android:text="Travel Documents"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <ImageView

                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_15sdp"

                    android:layout_marginRight="20dp"
                    android:src="@drawable/go" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/hotel_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/hint_phone"

                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"

                android:background="@drawable/backlogin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hotel_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:src="@drawable/hotel_icon" />


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/hotel_icon"
                    android:background="@null"
                    android:fontFamily="@font/ballo"

                    android:text="Hotel Details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <ImageView

                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_15sdp"

                    android:layout_marginRight="20dp"
                    android:src="@drawable/go" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/important_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"

                android:background="@drawable/backlogin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/important_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:src="@drawable/phone" />


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/important_icon"
                    android:background="@null"
                    android:fontFamily="@font/ballo"

                    android:text="Important Contact"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <ImageView

                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_15sdp"

                    android:layout_marginRight="20dp"
                    android:src="@drawable/go" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/explore_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"

                android:background="@drawable/backlogin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/explore_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:src="@drawable/map" />


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/explore_icon"
                    android:background="@null"
                    android:fontFamily="@font/ballo"

                    android:text="Explore Destination"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <ImageView

                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_15sdp"

                    android:layout_marginRight="20dp"
                    android:src="@drawable/go" />


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:layout_above="@+id/optionLayout"

            android:background="@drawable/belowauth" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:id="@+id/optionLayout"
            android:weightSum="4"
            android:layout_alignParentBottom="true"
            android:background="#0E59F0">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView

                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:src="@drawable/home" />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:fontFamily="@font/ballo"

                    android:text="Home"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView

                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:src="@drawable/chat" />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:fontFamily="@font/ballo"

                    android:text="Chat"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:id="@+id/currencyConverter"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView

                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:src="@drawable/currency" />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:fontFamily="@font/ballo"

                    android:text="Currency"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView

                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:src="@drawable/registration" />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:fontFamily="@font/ballo"

                    android:text="Register"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/vNavigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextAppearance="@style/NavigationView"
        app:headerLayout="@layout/headernavgiation"
        app:itemIconTint="@color/main"
        app:itemTextColor="@color/main"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>