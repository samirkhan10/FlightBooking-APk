<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FlightDoc.AddTickets"
    >


    <RelativeLayout
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/flad"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:onClick="Back"
            android:src="@drawable/back_arrow" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/ballo"
            android:text="Flight Details Upload"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool"
        android:background="#E8E8E8"
        android:orientation="vertical">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"

            android:padding="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp">


            <TextView
                android:id="@+id/hint_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@color/white"
                android:padding="5dp"
                android:text="The below information will be used to provide you important flight status updates."
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/userName_Layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/hint_phone"

                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_6sdp"

                android:background="@drawable/backlogin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:src="@drawable/pen" />


                <EditText
                    android:id="@+id/flightNum"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/user"
                    android:background="@null"
                    android:fontFamily="@font/ballo"
                    android:hint="Flight Number"
                    android:inputType="text"
                    android:maxLength="15"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />


            </RelativeLayout>


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/backlogin"


                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gmail"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:src="@drawable/pen" />


                <EditText
                    android:id="@+id/departureAirport"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/gmail"

                    android:background="@null"

                    android:fontFamily="@font/ballo"
                    android:hint="Departure Airport"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />


            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/backlogin"


                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pen3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:src="@drawable/pen" />


                <EditText
                    android:id="@+id/departureDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/pen3"

                    android:background="@null"

                    android:fontFamily="@font/ballo"
                    android:hint="Departure Date &amp; Time"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />


            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/backlogin"


                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pen4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:src="@drawable/pen" />


                <EditText
                    android:id="@+id/arrivalAirport"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/pen4"
                    android:background="@null"

                    android:fontFamily="@font/ballo"

                    android:hint="Arrival Airport"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />


            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/backlogin"


                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pen5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:src="@drawable/pen" />


                <EditText
                    android:id="@+id/arrivalDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/pen5"
                    android:background="@null"

                    android:fontFamily="@font/ballo"

                    android:hint="Arrival Date &amp; Time"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />


            </RelativeLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:padding="5dp"
                    android:text="Upload Flight Ticket"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/uploadFlightTicket"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:background="@drawable/back_add" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/Regisster"
                style="@style/buttonStyle_matchparent"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/backred"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ballo"
                    android:text="Share with Coordinator"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>



</ScrollView>




    </LinearLayout>



</RelativeLayout>